                var gridContainer = $("#gridContainer").dxDataGrid("instance");
                loadPanel.show();
                gridContainer.getController('validating').validate(true).done(function (result) {
                    if (result) {
                        gridContainer.saveEditData();
                        setTimeout(function () { AddUpdate(); }, 2000);
                    }
                    else {
