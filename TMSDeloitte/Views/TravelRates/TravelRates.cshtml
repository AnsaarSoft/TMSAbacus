    function GenerateGrid(JSON_Response) {
        $(function () {
            $("#gridContainer").dxDataGrid({
                dataSource: JSON_Response,
                keyExpr: "KEY",
                columnAutoWidth: true,
                allowColumnResizing: true,
                allowColumnReordering: true,
                showBorders: true,
                showScrollbar: 'always',
                filterRow: { visible: true },
                scrolling: {
                    mode: "horizontal",
                    showScrollbar: 'always'
                },
                scrolling: {
                    mode: "horizontal",
                    showScrollbar: 'always'
                },
                paging: {
                    enabled: false
                },
                editing: {
                    mode: "batch",
                    allowUpdating: true,
                    allowDeleting: true,
                    allowAdding: true
                },
                columns: [
                     {
                         dataField: "ID",
                         caption: "ID",
                         width: "auto",
                         allowEditing: false,
                         visible: false
                     },
                    {
                        dataField: "SNO",
                        caption: "S.No",
                        dataType: "Number",
                        allowEditing: false,
                        width: "auto",
                    },
                    {
                        caption: "From K.M",
                        dataField: "FROMKM",
                        validationRules: [{ type: "required" }],

                       // width: "100"
                    },
                    {
                        caption: "To K.M",
                        dataField: "TOKM",
                        validationRules: [{ type: "required" }],

                        //width: "100"
                    },
                    {
                        caption: "Rates/Trip",
                        dataField: "RATETRIP",
                        validationRules: [{ type: "required" }],

                       // width: "100"
                    },
                    {
                        dataField: "ISACTIVE",
                        caption: "Active",
                        dataType: "boolean",
                       // width: "auto"
                    },
                     {
                         dataField: "ISDELETED",
                         caption: "Deleted",
                         dataType: "bool",
                         visible: false,
                         allowEditing: false,
                        // width: "auto"
                     }
                ],
                onEditorPreparing: function (e) {
                    if (e.parentType == 'dataRow' && e.dataField == 'FROMKM' && e.dataField == 'TOKM' && e.dataField == 'RATETRIP') {
                        e.editorOptions.maxLength = 100;
                    }
                },
                onEditingStart: function (e) {
                },
                onInitNewRow: function (e) {
                   
                    e.data.ID = 0;
                    e.data.ISDELETED = false;
                    e.data.ISACTIVE = true;

                },
                onRowInserting: function (e) {
                    
                },
                onRowInserted: function (e) {
                    Table.forEach(function (obj) {
                        if (obj.ID == 0 && BRANCHID != undefined) {
                            obj.BRANCHID = BRANCHID;
                            obj.DOCNUM = DocNum == undefined ? '' : DocNum;
                        }
                    })
                  
                },
                onRowUpdating: function (e) {
                },
                onRowUpdated: function (e) {
                    $.each(Table, function (index, val) {
                        if (val.KEY == e.data.KEY) {
                            val.FROMKM = e.data.FROMKM;
                            val.TOKM = e.data.TOKM;
                            val.RATETRIP = e.data.RATETRIP;
                            val.BRANCHID = e.data.BRANCHID;
                            val.ISACTIVE = e.data.ISACTIVE;
                        }

                    });
                },
                onRowRemoving: function (e) {
                },
                onRowRemoved: function (e) {
                    $.each(Table, function (index, val) {
                        if (val.KEY == e.data.KEY) {
                            val.ISDELETED = true;
                        }
                    });
                }
            });

        });
    }

    function GetTravel_Rates() {
        var url = "/TravelRates/GetTravelRates";
        $.ajax({
            url: url,
            method: "GET",
            data: {},
            async: false,
        }).done(function (data) {
            TravelratesList = data.response;
            var abc = [];
            GenerateGrid(abc);

            Table = TravelratesList;
        }).fail(function (data) {
        });
    }

    function ValidateAuthorization() {
        var id = $("#AuthID").val();
        if (id != -1) {
            if (id == 2) {
                $("#add_update").remove();
                $("#gridContainer").dxDataGrid({ disabled: true });

            }
        }
    }

    function AddUpdate() {
        var notSaved = $('#gridContainer').dxDataGrid('instance').getController('editing').hasChanges();
        if (notSaved)
            setTimeout(function () { AddUpdate(); }, 2000);

        else {
            if (Table.length > 0) {

                if (!BRANCHID) {
                    AlertToast('error', "Please select branch!");
                    return;
                }
                var url = "/TravelRates/AddUpdateGetTravelRates";
                $.ajax({
                    type: "POST",
                    url: url,
                    contentType: 'application/json',
                    data: JSON.stringify(Table),
                    dataType: "json",
                    async: false,
                    success: function (response) {
                        if (response.Success) {
                            AlertToast('success', response.Message);
                            setTimeout(function () {
                                window.location.reload();
                            }, 5000);
                            GetTravel_Rates();
                        }
                        else
                        {
                            AlertToast('error', response.Message);
                        }
                        loadPanel.hide();
                    },
                    error: function (response) {
                        var data = JSON.parse(response.responseText);
                        if (data.Success == true) {
                            AlertToast('success', data.Message);
                            setTimeout(function () {
                                window.location.reload();
                            }, 500);
                            GetTravel_Rates();
                        }
                        else {
                            console.log(response)
                        }
                        loadPanel.hide();
                    },
                    failure: function (response) {
                        console.log(response);
                        loadPanel.hide();
                    }

                })
            }
            else {
                AlertToast('error', "Please add atleast one record");
                loadPanel.hide();
            }
        }
    }

    $('document').ready(function () {
        GetTravel_Rates();
        GetsapBranch();
        ValidateAuthorization();

        $('#add_update').click(function () {
            if (!BRANCHID) {
                AlertToast('error', "Please select branch!");
                
